                    if (RequireProportion)
                    {
                        var ori = InitCropWidth;
                        InitCropWidth = InitCropHeight/Proportion;
                        deltaX = ori - InitCropWidth;
                        prevPosX += deltaX;
                    }
                    else
                    {
                        prevPosX += deltaX;
