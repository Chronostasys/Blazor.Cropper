                {
                    prevPosY = prevPosY+delta;
                    InitCropHeight-=delta;
                    if (RequireProportion)
                    {
                        var ori = InitCropWidth;
                        InitCropWidth = InitCropHeight/Proportion;
                        deltaX = ori - InitCropWidth;
                        prevPosX += deltaX;
                    }
                    else
                    {
                        prevPosX += deltaX;
                        InitCropWidth -=deltaX;
                    }
                    break;
                }
                case MoveDir.UpRight:
                {
                    prevPosY = prevPosY+delta;
                    InitCropHeight-=delta;
                    InitCropWidth+=deltaX;
                    if (RequireProportion)
                    {
                        InitCropWidth = InitCropHeight/Proportion;
                    }
                    break;
